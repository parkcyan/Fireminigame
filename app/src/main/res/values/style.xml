<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/cyan</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="circleButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">90%</item>
        <item name="strokeColor">@color/cyan</item>
    </style>

</resources>